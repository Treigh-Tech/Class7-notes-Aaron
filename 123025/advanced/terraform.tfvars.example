# ===================================
# Example Terraform Variables File
# ===================================
# Copy this file to terraform.tfvars and customize as needed
# cp terraform.tfvars.example terraform.tfvars

# ===================================
# Core Configuration
# ===================================

aws_region   = "us-west-2"
environment  = "dev"      # Options: dev, staging, prod
project_name = "myproject"

# ===================================
# VPC Configuration
# ===================================

vpc_cidr             = "10.10.0.0/16"
instance_tenancy     = "default"   # Options: default, dedicated
enable_dns_hostnames = true
enable_dns_support   = true

# ===================================
# Subnet Configuration
# ===================================

availability_zones_count = 3  # Number of AZs to use (2-6)

# Public subnet CIDRs (one per AZ)
public_subnet_cidrs = [
  "10.10.1.0/24",
  "10.10.2.0/24",
  "10.10.3.0/24",
]

# Private subnet CIDRs (one per AZ)
private_subnet_cidrs = [
  "10.10.11.0/24",
  "10.10.12.0/24",
  "10.10.13.0/24",
]

map_public_ip_on_launch = true

# ===================================
# NAT Gateway Configuration
# ===================================

enable_nat_gateway = true
single_nat_gateway = true  # Set to false for HA (one NAT per AZ, higher cost)

# ===================================
# Security Configuration
# ===================================

# Leave null to use VPC CIDR, or specify a custom CIDR
allowed_ssh_cidr = null  # Example: "10.10.0.0/16" or "203.0.113.0/24"

# ===================================
# Tagging
# ===================================

common_tags = {
  ManagedBy = "Terraform"
  Team      = "Platform"
}

additional_tags = {
  CostCenter = "Engineering"
  Compliance = "PCI"
}

# ===================================
# Example Configurations
# ===================================

# Production Configuration Example:
# -----------------------------------
# environment            = "prod"
# availability_zones_count = 3
# single_nat_gateway     = false  # One NAT per AZ for HA
# instance_tenancy       = "default"

# Development Configuration Example:
# -----------------------------------
# environment            = "dev"
# availability_zones_count = 2
# single_nat_gateway     = true   # Cost savings
# enable_nat_gateway     = false  # Even more cost savings (no internet for private subnets)

# Staging Configuration Example:
# -----------------------------------
# environment            = "staging"
# availability_zones_count = 2
# single_nat_gateway     = true
